<style lang="scss">
  h2 {
    font-weight: 700;
    text-transform: uppercase;
    font-size: 40px;
  }

  svg {
    transition: transform 0.2s ease-in-out;
  }

  .content {
    margin-block: 50px;
  }

  .links {
    margin-block: 20px;
    display: flex;
    flex-direction: row;

    gap: 40px;
  }

  a {
    align-items: center;
    color: black;
    text-decoration: none;
    display: inline-flex;
    font-size: 20px;
    inline-size: auto;
    gap: 10px;
    padding-block: 20px;
    text-transform: uppercase;

    &:is(:hover, :focus-within) {
      color: #032eff;

      svg {
        color: #032eff;
        transform: translateX(10px);
      }
    }
  }
</style>
